<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_staff_product_height"
    android:layout_marginTop="10dp"
    android:background="@drawable/product_bgr"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/product_icon"
            android:src="@drawable/ic_product_default"
            android:layout_width="@dimen/bill_product_icon_size"
            android:layout_height="@dimen/bill_product_icon_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|left"
        android:layout_weight="2"
        android:textColor="@color/colorWhite" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/product_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorWhite" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/product_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorWhite" />
</LinearLayout>