<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_nav_header_height"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/main_nav_header_padding_bottom"
    android:paddingLeft="@dimen/main_nav_header_padding_horizontal"
    android:paddingRight="@dimen/main_nav_header_padding_horizontal">


    <ImageView
        android:id="@+id/main_header_avatar"
        android:layout_width="@dimen/main_nav_header_icon_size"
        android:layout_height="@dimen/main_nav_header_icon_size"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_avatar_default" />

    <TextView
        android:id="@+id/main_header_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/main_header_avatar"
        android:text="Manager"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/main_nav_header_position_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_header_position"
        android:layout_toRightOf="@id/main_header_avatar"
        android:text="Hitagi007"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/main_nav_header_name_size" />
</RelativeLayout>