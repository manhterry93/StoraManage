<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_staff_product_height"
    android:layout_marginTop="10dp"
    android:background="@drawable/product_bgr"
    android:gravity="center_vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="@dimen/main_staff_product_icon_size"
        android:layout_height="@dimen/main_staff_product_icon_size"
        android:layout_marginRight="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_avatar_default" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/product_icon"
        android:text="Title`"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/main_staff_product_title_size" />

    <TextView
        android:id="@+id/product_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_title"
        android:layout_toRightOf="@id/product_icon"
        android:text="Cost`"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/main_staff_product_cost_size"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/product_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_cost"
        android:layout_toRightOf="@id/product_icon"
        android:text="Title`"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/main_staff_product_amount_size" />
</RelativeLayout>