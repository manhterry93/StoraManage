<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:theme="@style/AppTheme.Toolbar" />

    <EditText
        android:id="@+id/staff_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="5dp"
        android:background="@drawable/staff_search_bgr"
        android:drawableLeft="@drawable/ic_search"
        android:gravity="center|left"
        android:hint="@string/staff_search_hint"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/staff_search_color"
        android:textColorHint="@color/staff_search_color_hint"
        android:textSize="@dimen/staff_search_text_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/staff_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/staff_search"
        android:padding="5dp" />
</RelativeLayout>